# 1. Importação das bibliotecas necessárias
import pandas as pd
import numpy as np

# ============================================
# ETAPA 1 - EXTRAÇÃO
# ============================================
# Simulação de dados: normalmente você leria de um CSV ou Excel
# Aqui criamos um DataFrame fictício para simplificar
dados = pd.DataFrame({
    "id_usuario": [1, 2, 3, 4, 5],
    "nome": ["Ana", "Bruno", "Carla", "Diego", "Eva"],
    "idade": [23, 35, 29, 42, 18],
    "cidade": ["Rio", "SP", "BH", "Curitiba", "Fortaleza"]
})

print("Dados extraídos:")
print(dados)

# ============================================
# ETAPA 2 - TRANSFORMAÇÃO
# ============================================
# Exemplo: criar uma nova coluna categorizando usuários por faixa etária
def classificar_idade(idade):
    if idade < 20:
        return "Adolescente"
    elif idade < 30:
        return "Jovem"
    elif idade < 40:
        return "Adulto"
    else:
        return "Sênior"

dados["faixa_etaria"] = dados["idade"].apply(classificar_idade)

# Outra transformação: normalizar nomes para maiúsculas
dados["nome_normalizado"] = dados["nome"].str.upper()

print("\n Dados transformados:")
print(dados)

# ============================================
# ETAPA 3 - CARREGAMENTO
# ============================================
# Salvar os dados transformados em um novo CSV
dados.to_csv("dados_transformados.csv", index=False)

print("\n Pipeline ETL concluído! Arquivo 'dados_transformados.csv' gerado.")

# ============================================
# ETAPA EXTRA - VISUALIZAÇÃO
# ============================================
# Exemplo simples de análise: contagem por faixa etária
contagem = dados["faixa_etaria"].value_counts()
print("\n Distribuição por faixa etária:")
print(contagem)
